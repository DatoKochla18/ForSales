<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="4dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/cart_company_shadow" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:angle="45"
                android:endColor="@color/cart_company_selected_end"
                android:startColor="@color/cart_company_selected_start" />
            <stroke
                android:width="2dp"
                android:color="@color/cart_company_selected_border" />
        </shape>
    </item>

</layer-list>